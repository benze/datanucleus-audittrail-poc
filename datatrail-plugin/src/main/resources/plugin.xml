<?xml version="1.0"?>
<plugin id="mydomain" name="ADAMS DataNucleus plug-in" provider-name="ADAMS">
    <extension point="org.datanucleus.java_type">
        <java-type name="java.util.List" dfg="false" wrapper-type="org.datanucleus.store.types.wrappers.List" wrapper-type-backed="mydomain.datanucleus.types.wrappers.backed.List"
                   container-handler="org.datanucleus.store.types.containers.ArrayListHandler" priority="10"/>
        <java-type name="java.util.Arrays$ArrayList" dfg="false" wrapper-type="org.datanucleus.store.types.wrappers.List" wrapper-type-backed="mydomain.datanucleus.types.wrappers.backed.List"
                   container-handler="org.datanucleus.store.types.containers.ArrayListHandler" priority="10"/>


        <java-type name="java.util.Map" dfg="false" wrapper-type="org.datanucleus.store.types.wrappers.Map" wrapper-type-backed="mydomain.datanucleus.types.wrappers.backed.Map"
                   container-handler="org.datanucleus.store.types.containers.HashMapHandler" priority="10"/>
        <java-type name="java.util.HashMap" dfg="false" wrapper-type="org.datanucleus.store.types.wrappers.Map" wrapper-type-backed="mydomain.datanucleus.types.wrappers.backed.Map"
                   container-handler="org.datanucleus.store.types.containers.HashMapHandler" priority="10"/>
    </extension>

    <extension point="org.datanucleus.class_annotation_handler">
        <class-annotation-handler annotation-class="mydomain.audit.DataTrail" handler="mydomain.datanucleus.datatrail.annotation.DataTrailAnnotationHandler"/>
    </extension>

    <extension point="org.datanucleus.member_annotation_handler">
        <member-annotation-handler annotation-class="mydomain.audit.DataTrail" handler="mydomain.datanucleus.datatrail.annotation.DataTrailAnnotationHandler"/>
    </extension>
</plugin>
